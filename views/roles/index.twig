{% extends "layout/default/template.twig" %}
{% block title %}
	{{options.title}}
{% endblock %}

{% block content %}
	<div class="card">
		<div class="card-header">
			{{options.subject}}
			<a href="" class="btn btn-outline-dark btn-sm">Nuevo Rol</a>
		</div>
		<div class="card-body">
			{% if options.roles is not empty %}
				<table class="table table-hover">
					<thead>
                        <tr>
                            <th>Id</th>
                            <th>Rol</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for model in options.roles %}
                            <tr>
                                <td>{{model.id}} </td>
                                <td>{{model.nombre}} </td>
                                <td>
                                    <a href="">Ver</a>
                                    <a href="">Editar</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
				</table>
			{% else %}
				<p class="text-info">{{options.warning}}
				</p>
			{% endif %}

		</div>
	</div>
{% endblock %}
