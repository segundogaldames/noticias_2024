{% extends "layout/default/template.twig" %}
{% block title %}
	{{options.title}}
{% endblock %}

{% block content %}
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                {{options.subject}}
            </div>
            <div class="card-body">
                {% include "partials/_messages.twig" %}
                {% if options.role is not empty %}
                    <table class="table table-hover">
                        <tr>
                            <th>Id:</th>
                            <td>{{options.role.id}} </td>
                        </tr>
                        <tr>
                            <th>Nombre:</th>
                            <td>{{options.role.nombre}} </td>
                        </tr>
                        <tr>
                            <th>Creado:</th>
                            <td>{{options.role.created_at|date("d-m-Y H:i:s")}} </td>
                        </tr>
                        <tr>
                            <th>Modificado:</th>
                            <td>{{options.role.updated_at|date("d-m-Y H:i:s")}} </td>
                        </tr>
                    </table>
                {% else %}
                    <p class="text-info">{{options.warning}} </p>
                {% endif %}
                
            </div>
            <a href="{{BASE}}{{options.back}}" class="btn btn-link">Volver</a>
        </div>
    </div>
{% endblock %}