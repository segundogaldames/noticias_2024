{% extends "layout/default/template.twig" %}
{% block title %}
	{{options.title}}
{% endblock %}

{% block content %}
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                {{options.subject}}
            </div>
            <div class="card-body">
                {% include "partials/_messages.twig" %}
                {% if options.noticia is not empty %}
                    <table class="table table-hover">
                        <tr>
                            <th>Id:</th>
                            <td>{{options.noticia.id}} </td>
                        </tr>
                        <tr>
                            <th>Título:</th>
                            <td>{{options.noticia.titulo}} </td>
                        </tr>
                         <tr>
                            <th>Descripción:</th>
                            <td>{{options.noticia.descripcion}} </td>
                        </tr>
                         <tr>
                            <th>Publicado:</th>
                            <td>
                                {% if options.noticia.vigente == 1 %}Si {% else %} No {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Autor(a):</th>
                            <td>{{options.noticia.usuario.nombre}} </td>
                        </tr>
                        <tr>
                            <th>Creado:</th>
                            <td>{{options.noticia.created_at|date("d-m-Y H:i:s")}} </td>
                        </tr>
                        <tr>
                            <th>Modificado:</th>
                            <td>{{options.noticia.updated_at|date("d-m-Y H:i:s")}} </td>
                        </tr>
                    </table>
                {% else %}
                    <p class="text-info">{{options.warning}} </p>
                {% endif %}
                
            </div>
            <p>
                {% if session.user_role == 'Periodista' %}
                    <a href="{{BASE}}noticias/noticiasUsuario/{{session.user_id}}" class="btn btn-link">Volver</a>
                {% else %}
                    <a href="{{BASE}}noticias" class="btn btn-link">Volver</a>
                {% endif %}
            </p>
            
        </div>
    </div>
{% endblock %}