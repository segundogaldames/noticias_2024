{% extends "layout/default/template.twig" %}
{% block title %}
	{{options.title}}
{% endblock %}

{% block content %}
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                {{options.subject}}
            </div>
            <div class="card-body">
                {% include "partials/_messages.twig" %}
                <div class="row">
                    {% if options.noticia is not empty %}
                        <div class="col-md-4">
                            <h4>Im√°genes</h4>
                            <hr>
                            <h4>Videos</h4>
                        </div>
                        <div class="col-md-8">
                            <h4>{{options.noticia.titulo}} </h4>
                            <p>{{options.noticia.descripcion}} </p>
                            <p>
                                <a href="{{BASE}}{{options.back}}" class="btn btn-primary">Volver</a>
                            </p>
                        </div>
                    {% else %}
                        <p class="text-info">{{options.warning}} </p>        
                    {% endif %}
                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}
